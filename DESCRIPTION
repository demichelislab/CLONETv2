Package: CLONETv2
Type: Package
Title: Clonality Estimates in Tumor
Version: 2.2.1
Authors@R: c(person("Davide", "Prandi", email = "davide.prandi@unitn.it",role = c("aut")), 
             person("Alessandro", "Romanel", email = "alessandro.romanel@unitn.it",role = c("ctb")),
